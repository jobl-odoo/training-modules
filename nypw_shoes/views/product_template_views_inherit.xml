<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_product_template_only_form_view" model="ir.ui.view">
            <field name="name">product.template.product.form.inherit.nypw_shoes</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='list_price']" position='attributes'>
                    <attribute name="attrs">
                        {'readonly': ['|', ('pairs_per_case', '!=', 0), ('price_per_pair', '!=', 0)]}
                    </attribute>
                </xpath>
                <xpath expr="//group[@name='group_standard_price']" position='inside'>
                    <field name="pairs_per_case"/>
                    <field name="price_per_pair"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>