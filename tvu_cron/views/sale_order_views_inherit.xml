<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ir_cron_scheduler_cancel_expired_quotations" model="ir.cron">
            <field name="name">Sale Quotations: cancel expired quotations</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model._cancel_expired_quotations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="DateTime.now().strftime('%Y-%m-%d 00:00:00')"/>
        </record>
    </data>
</odoo>