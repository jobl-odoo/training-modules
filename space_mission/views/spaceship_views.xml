<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="spaceship_view_form">
            <field name="name">space_mission.spaceship.form</field>
            <field name="model">space_mission.spaceship</field>
            <field name="arch" type="xml">
                <form string="Spaceship Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="height_in_m"/>
                                <field name="diameter_in_m"/>
                                <field name="payload_to_leo_in_t"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="num_passengers"/>
                                <field name="ship_type"/>
                                <field name="fuel_type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="spaceship_view_list">
            <field name="name">space_mission.spaceship.list</field>
            <field name="model">space_mission.spaceship</field>
            <field name="arch" type="xml">
                <tree string="Spaceship List">
                    <field name="name"></field>
                    <field name="ship_type"></field>
                    <field name="num_passengers"></field>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="spaceship_view_search">
            <field name="name">space_mission.spaceship.search</field>
            <field name="model">space_mission.spaceship</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="ship_type"/>
                </search>
            </field>
        </record>
    </data>
</odoo>