<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="missions_website">
            <t t-call="website.layout">
                <t t-set="title">Space Mission</t>
                <div class="oe_structure">
                    <div class="container">
                        <h1>Missions</h1>
                        <t t-foreach="missions" t-as="mission">
                            <h3>
                                <a t-attf-href="/space_mission/{{ slug(mission)}}">
                                    <t t-esc="mission.name"/>
                                </a>
                            </h3>
                            <p>Spaceship:
                                <span t-field="mission.spaceship_id"/>
                            </p>
                        </t>
                    </div>
                </div>
            </t>
        </template>
        
        <template id="mission_website">
            <t t-call="website.layout">
                <t t-set="title">Mission</t>
                <div class="oe_structure">
                    <div class="container">
                        <h3 t-field="mission.name"/>
                        <p>Launch Date:
                            <i t-field="mission.launch_date" t-field-options='{"format": long"}'/>
                        </p>
                        <p>Return Date:
                            <i t-field="mission.return_date" t-field-options='{"format": long"}'/>
                        </p>
                        <h2>Crew Members:</h2>
                        <ul>
                            <t t-foreach="mission.crew_member_ids" t-as="crew_member">
                                <li>
                                    <span t-field="crew_member.name"/>
                                </li>
                            </t>
                        </ul>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>