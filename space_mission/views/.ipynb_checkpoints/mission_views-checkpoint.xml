<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="mission_view_form">
            <field name="name">space_mission.mission.form</field>
            <field name="model">space_mission.mission</field>
            <field name="arch" type="xml">
                <form string="Mission Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="spaceship_id"/>
                                <field name="launch_date"/>
                                <field name="return_date"/>
                                <field name="mission_duration"/>
                            </group>
                            <group>
                                <field name="fuel_required_in_t"/>
                                <field name="num_engines"/>
                                <field name="safety_features"/>
                            </group>
                            <notebook>
                                <page string="Crew Members">
                                    <field name="crew_member_ids"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="mission_view_list">
            <field name="name">space_mission.mission.list</field>
            <field name="model">space_mission.mission</field>
            <field name="arch" type="xml">
                <tree string="Mission List">
                    <field name="spaceship_id"/>
                    <field name="launch_date"/>
                    <field name="return_date"/>  
                </tree>
            </field>
        </record>
        
                
        <record model="ir.ui.view" id="mission_view_graph">
            <field name="name">space_mission.mission.graph</field>
            <field name="model">space_mission.mission</field>
            <field name="arch" type="xml">
                <graph>
                    <field name="spaceship_id"/>
                    <field name="fuel_required_in_t" type="measure"/>
                    <field name="num_engines" type="measure"/>
                </graph>
            </field>
        </record>
    </data>
</odoo>