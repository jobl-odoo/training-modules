<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.actions.act_window" id="spaceship_list_action">
            <field name="name">Spaceship</field>
            <field name="res_model">space_mission.spaceship</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first spaceship
                </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="mission_list_action">
            <field name="name">Missions</field>
            <field name="res_model">space_mission.mission</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first mission
                </p>
            </field>
        </record>
        
        <menuitem name="Space"
                  id="menu_space_mission"
                  web_icon="space_mission,static/description/space_icon.png"
                  sequence="1"/>
        <menuitem name="Space Mission"
                  id="menu_space_mission_sub"
                  parent="menu_space_mission"
                  sequence="2"/>
        <menuitem name="Spaceship"
                  id="menu_space_mission_spaceships"
                  parent="menu_space_mission_sub"
                  sequence="3"
                  action="spaceship_list_action"/>
        <menuitem name="Missions"
                  id="menu_space_mission_missions"
                  parent="menu_space_mission_sub"
                  sequence="4"
                  action="mission_list_action"/>
    </data>
</odoo>