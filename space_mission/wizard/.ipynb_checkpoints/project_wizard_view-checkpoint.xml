<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="space_mission_project_wizard_form_view">
            <field name="name">space_mission.wizard.form</field>
            <field name="model">space_mission.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Project for Mission">
                    <group>
                        <field name="name"/>
                        <field name="mission_id"/>
                        <field name="mission_crew_member_ids"/>
                    </group>
                    <footer>
                        <button name="create_project" type="object" string="Create" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <act_window id="launch_project_wizard"
                    name="Create Project"
                    binding_model="space_mission.mission"
                    res_model="space_mission.project.wizard"
                    view_mode="form"
                    target="new"/>
    </data>
</odoo>